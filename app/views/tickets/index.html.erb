<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Time</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.event.name %></td>
        <td><%= ticket.event.event_time %></td>
        <td><%= ticket.price %></td>

        <td><%= link_to 'Show', ticket, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket), class: "btn btn-outline-warning" %></td>
        <td><%= link_to 'Destroy', ticket, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
